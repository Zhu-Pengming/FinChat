<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#FFFBEE"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <WebView
        android:id="@+id/detail_web"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="69dp"
        tools:ignore="WebViewLayout" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="365dp"
        android:layout_weight="10"
        android:orientation="vertical"
        app:columnCount="4"
        app:rowCount="4">

        <!-- Row 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            app:layout_columnSpan="4"
            app:layout_row="0">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFF8DC"
                android:gravity="center"
                android:padding="8dp"
                android:text="基金类型"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/fund_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFF8DC"
                android:gravity="center"
                android:padding="8dp"
                android:text="成立日期"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/inception_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15sp" />

        </LinearLayout>

        <!-- Row 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            app:layout_columnSpan="4"
            app:layout_row="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFF8DC"
                android:gravity="center"
                android:padding="8dp"
                android:text="资产净值"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/total_assets"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFF8DC"
                android:gravity="center"
                android:padding="8dp"
                android:text="风险"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/risk"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            app:layout_columnSpan="4"
            app:layout_row="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFF8DC"
                android:gravity="center"
                android:padding="8dp"
                android:text="年回报率"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/annual_return"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFF8DC"
                android:gravity="center"
                android:padding="8dp"
                android:text="夏普比率"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/sharpe_ratio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            app:layout_columnSpan="4"
            app:layout_row="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFF8DC"
                android:gravity="center"
                android:padding="8dp"
                android:text="管理费"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/management_fee"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFF8DC"
                android:gravity="center"
                android:padding="8dp"
                android:text="业绩费"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/performance_fee"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15sp" />

        </LinearLayout>


        <!-- Add more LinearLayouts for other rows here -->

    </GridLayout>

    <TextView
        android:id="@+id/fund_name"
        android:layout_width="350dp"
        android:layout_height="78dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="570dp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/detail_return"
        android:layout_width="73dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="314dp"
        android:layout_marginBottom="665dp"
        app:srcCompat="@drawable/game_return" />


</RelativeLayout>